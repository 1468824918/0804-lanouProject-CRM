<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.lanou.crm.domain">
    <class name="Post" table="crm_post">
        <id name="postId" column="postId">
            <generator class="uuid"/>
        </id>
        <property name="postName"/>

        <many-to-one name="department"
                     column="depID"
                     class="Department"
                     not-null="true"
                     cascade="save-update"/>

        <set name="staffs" table="crm_staff" cascade="save-update" inverse="true">
            <key column="postId"/>
            <one-to-many class="Staff"/>
        </set>
    </class>
</hibernate-mapping>